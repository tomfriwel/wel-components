/* components/searchbar/searchbar.wxss */
 .search-bar-container {
    position: relative;
    width: 750rpx; 
    background: #f0eff5;
    height: 114rpx;
}

.wrap {
    position: absolute;
    left: 18rpx;
    right: 18rpx;
    height: 100%;
    border-bottom: 2rpx solid #F2F3F6;
    display: flex;
    align-items: center;
}

.search-bar-content-container {
    position: relative;
    width: 100%;
    margin: 0 auto;
    height: 72rpx;
    border-radius: 14rpx;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    border: 2rpx solid #e5e5e5;
}

/* .search-bar-content-container.active {
